{
	"name": "@codeeditorland/workspace",
	"workspaces": [
		"./.github/bot",
		"./.github/swc-ecosystem-ci",
		"./packages/*",
		"./packages/core/scripts/npm/*",
		"./packages/minifier/scripts/npm/*",
		"./bindings/*",
		"./bindings/binding_core_wasm/*"
	],
	"scripts": {
		"build": "cd ./packages/core && yarn build",
		"build:dev": "cd ./packages/core && yarn build:dev",
		"build:ts": "cd ./packages/core && yarn build:ts",
		"changelog": "git cliff --output CHANGELOG.md",
		"prepublishOnly": "Build 'Source/**/*.ts'",
		"test:core": "cd ./packages/core && yarn test",
		"test:html": "cd ./packages/html && yarn test"
	},
	"lint-staged": {
		"!(**/tests/**/*)*.js": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.jsx": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.ts": [
			"prettier --write"
		],
		"!(**/tests/**/*)*.tsx": [
			"prettier --write"
		],
		"*.json": [
			"prettier --write"
		],
		"*.rs": [
			"rustfmt --"
		],
		"*.toml": [
			"taplo format"
		]
	},
	"dependencies": {},
	"devDependencies": {
		"@babel/compat-data": "7.26.3",
		"@babel/generator": "7.26.3",
		"@babel/plugin-proposal-decorators": "7.25.9",
		"@babel/plugin-proposal-object-rest-spread": "7.20.7",
		"@babel/types": "7.26.3",
		"@codeeditorland/helpers": "0.0.1",
		"@codeeditorland/plugin-coverage-instrument": "0.0.1",
		"@codeeditorland/plugin-jest": "0.0.1",
		"@playform/build": "0.2.0",
		"@taplo/cli": "0.7.0",
		"@types/node": "22.10.1",
		"@types/terser": "3.12.0",
		"acorn": "8.14.0",
		"acorn-jsx": "5.3.2",
		"axios": "1.7.9",
		"babel-plugin-transform-node-env-inline": "0.4.3",
		"benchmark": "2.1.4",
		"bootstrap": "5.3.3",
		"class-validator": "0.14.1",
		"core-js": "3.39.0",
		"core-js-compat": "3.39.0",
		"cross-env": "7.0.3",
		"cspell": "8.16.1",
		"expect": "29.7.0",
		"glob": "11.0.0",
		"js-beautify": "1.15.1",
		"lint-staged": "15.2.10",
		"lodash": "4.17.21",
		"npm-run-all": "4.1.5",
		"progress": "2.0.3",
		"prop-types": "15.8.1",
		"reflect-metadata": "0.2.2",
		"regenerator-runtime": "0.14.1",
		"source-map": "0.7.4",
		"source-map-support": "0.5.21",
		"sourcemap-validator": "2.1.0",
		"terser": "5.36.0",
		"yaml": "2.6.1",
		"zx": "8.2.4"
	}
}
